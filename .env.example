# IzzU Environment Configuration
# Copy this file to .env.local and fill in your values

# ============================================
# DATABASE
# ============================================
DATABASE_URL="postgres://user:password@localhost:5432/izzu"

# ============================================
# REDIS (Sessions, OTP, Cache)
# ============================================
REDIS_URL="redis://localhost:6379"

# ============================================
# OTP DELIVERY (Optional - Twilio Verify)
# ============================================
# Get these from https://console.twilio.com
# TWILIO_ACCOUNT_SID=""
# TWILIO_AUTH_TOKEN=""
# TWILIO_VERIFY_SID=""

# Dev mode: Set "true" to auto-fill OTP in SDK (no Twilio needed)
OTP_DEV_MODE="true"

# ============================================
# OAUTH (Optional)
# ============================================
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# ============================================
# WEBAUTHN / PASSKEYS
# ============================================
RP_ID="localhost"
ORIGIN="http://localhost:3000"
NEXTAUTH_URL="http://localhost:3001"
